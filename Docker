# Use an official Python slim image for a smaller footprint
FROM python:3.10-slim-bookworm

# Environment variables to optimize Python in Docker
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

# Install system dependencies required for your project
RUN apt-get update && apt-get install -y --no-install-recommends \
    # For compiling Python packages from source if needed
    build-essential \
    # For PostgreSQL (psycopg)
    libpq-dev \
    # A lightweight init system for containers
    tini \
    # Clean up apt cache to keep the image small
    && rm -rf /var/lib/apt/lists/*

# Set the working directory
WORKDIR /app

# Install uv, the fast Python package installer
RUN pip install uv

# Copy your requirements file
COPY requirements.txt .

# Install Python packages using uv (much faster than pip)
RUN uv pip install --system --no-cache-dir -r requirements.txt

# Copy the rest of your application code
COPY . .

# Copy and make the entrypoint script executable
COPY entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

# Expose the port your application will run on
EXPOSE 8000

# Use tini as the entrypoint for proper signal handling
ENTRYPOINT ["/usr/bin/tini", "--"]

# Execute the entrypoint script to start the application
CMD ["/app/entrypoint.sh"]