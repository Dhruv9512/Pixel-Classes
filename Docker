# Use Miniconda as the base image
FROM continuumio/miniconda3

# Set the working directory
WORKDIR /app

# Copy environment.yml and requirements.txt
COPY environment.yml requirements.txt /app/

# Install required system dependencies for MySQL
RUN apt-get update && apt-get install -y \
    pkg-config \
    libmariadb-dev \
    libmariadb-dev-compat \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Create the Conda environment and ensure it's activated in the shell
RUN conda env create -f environment.yml && conda clean --all -y

# Change the default shell to use Conda
SHELL ["conda", "run", "-n", "myenv", "/bin/bash", "-c"]

# Install additional Python dependencies (if required)
RUN conda run -n myenv pip install --no-cache-dir -r requirements.txt

# Copy the rest of the application code
COPY . /app

# Expose the port the application runs on
EXPOSE 5000

# Set the command to run the application inside the Conda environment
CMD ["conda", "run", "-n", "myenv", "python", "app.py"]
