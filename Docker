# Use Miniconda as the base image
FROM continuumio/miniconda3

# Set working directory
WORKDIR /app

# Copy the environment.yml file to the container
COPY environment.yml .

# Create the Conda environment
RUN conda env create -f environment.yml

# Activate the Conda environment by default
SHELL ["conda", "run", "-n", "myenv", "/bin/bash", "-c"]

# Set PATH for Conda environment
ENV PATH /opt/conda/envs/myenv/bin:$PATH

# Copy the project files
COPY . .

# Expose port 8000 for the web app
EXPOSE 8000

# Run migrations (if using Django)
RUN python manage.py migrate || true  # Ignore errors if Django is not used

# Start the web application (Change "app:app" for Flask or "your_project.wsgi" for Django)
CMD ["gunicorn", "--bind", "0.0.0.0:8000", "app:app"]
