# Use Miniconda as the base image
FROM continuumio/miniconda3

# Set the working directory
WORKDIR /app

# Copy the environment.yml file
COPY environment.yml /app/environment.yml

# Install dependencies using Conda
RUN conda env create -f environment.yml

# Activate the environment
RUN echo "source activate myenv" > ~/.bashrc
ENV PATH /opt/conda/envs/myenv/bin:$PATH

# Copy the entire project
COPY . /app

# Install additional dependencies if needed
RUN conda run -n myenv python -m pip install --upgrade pip
RUN conda run -n myenv pip install -r requirements.txt

# Expose the port (default for Django/Flask)
EXPOSE 8000

# Start the application (Django)
CMD ["conda", "run", "-n", "myenv", "gunicorn", "--bind", "0.0.0.0:8000", "myapp.wsgi:application"]

# For Flask, replace CMD with:
# CMD ["conda", "run", "-n", "myenv", "gunicorn", "--bind", "0.0.0.0:8000", "app:app"]
