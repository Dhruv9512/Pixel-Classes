# Use Miniconda as the base image
FROM continuumio/miniconda3

# Set the working directory inside the container
WORKDIR /app

# Copy environment.yml into the container
COPY environment.yml /app/

# Install system dependencies needed for MySQL (or MariaDB) and Redis
RUN apt-get update && apt-get install -y \
    pkg-config \
    libmariadb-dev \
    libmariadb-dev-compat \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Create the Conda environment from the environment.yml file
RUN conda env create -f /app/environment.yml

# Set environment variables to activate the Conda environment
ENV PATH /opt/conda/envs/myenv/bin:$PATH
ENV DEBIAN_FRONTEND=noninteractive

# Install Gunicorn & Redis dependencies for Celery
RUN pip install gunicorn redis celery

# Copy the application code (ensure your Django project code is in the current directory)
COPY . /app/

# Expose the port Django runs on
EXPOSE 8000

# Command to run the Django app using Gunicorn
CMD ["conda", "run", "--no-capture-output", "-n", "myenv", "gunicorn", "Pixel.wsgi:application", "--bind", "0.0.0.0:8000"]
