# Use Miniconda as the base image
FROM continuumio/miniconda3

# Set the working directory
WORKDIR /app

# Copy environment.yml
COPY environment.yml /app/

# Install required system dependencies for MySQL
RUN apt-get update && apt-get install -y \
    pkg-config \
    libmariadb-dev \
    libmariadb-dev-compat \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Create the Conda environment from environment.yml
RUN conda env create -f /app/environment.yml

# Activate the environment
SHELL ["conda", "run", "-n", "myenv", "/bin/bash", "-c"]

# Install additional dependencies for Django if needed (like gunicorn)
RUN pip install gunicorn

# Copy the application code (make sure the Django project code is in the current directory)
COPY . /app/

# Expose the port Django runs on (usually 8000 in development)
EXPOSE 8000

# Command to run the Django development server
CMD ["conda", "run", "--no-capture-output", "-n", "myenv", "python", "manage.py", "runserver", "0.0.0.0:8000"]
